{
  "name": "Bionic Reading",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Implement bionic reading on web pages",
  "permissions": ["tabs", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
